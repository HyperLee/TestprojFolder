@page
@model BNICalculate.Pages.BMIModel
@{
    ViewData["Title"] = "BMI 計算器";
}

<link rel="stylesheet" href="~/css/bmi.css" />

<div class="bmi-container">
    <h1>BMI 計算器</h1>
    
    <div class="form-group">
        <label for="height">身高 (公尺)</label>
        <input type="number" id="height" step="0.01" placeholder="例如: 1.75" />
    </div>
    
    <div class="form-group">
        <label for="weight">體重 (公斤)</label>
        <input type="number" id="weight" step="0.1" placeholder="例如: 70" />
    </div>
    
    <div class="button-group">
        <button type="button" id="calculate-btn">計算</button>
        <button type="button" id="clear-btn">清除</button>
    </div>
    
    <div id="result-container" style="display: none;">
        <div id="bmi-value"></div>
        <div id="bmi-category"></div>
    </div>
</div>

@section Scripts {
    <script src="~/js/bmi.js"></script>
}
